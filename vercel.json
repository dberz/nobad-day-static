{
  "version": 2,
  "buildCommand": "echo 'No build needed - serving static files'",
  "outputDirectory": "static-mirror",
  "installCommand": "echo 'Skipping install - no dependencies needed'",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1.html",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "(text/html|application/xhtml\\+xml)"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/(.*\\.(css|js|woff|woff2|ttf|otf|png|jpg|jpeg|gif|svg|webp|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
